<div class="card text-center">
  <div class="card-header">
    <h5 class="card-title mb-0">Session Access</h5>
  </div>
  
  <div class="card-body">
    {{#if this.qrCodeUrl}}
      <div class="mb-3">
        <img 
          src="{{this.qrCodeUrl}}" 
          alt="QR Code for session access" 
          class="rounded border w-100"
        >
      </div>
      
      <div class="mb-3">
        <h6 class="text-muted">Scan to Join Session</h6>
        <code class="fs-6">{{this.shortUrl}}</code>
      </div>
      
      <div class="d-grid gap-2">
        <a 
          href="{{this.sessionUrl}}" 
          target="_blank" 
          class="btn btn-primary"
        >
          <i class="bi bi-box-arrow-up-right me-2"></i>
          Open Session Link
        </a>
      </div>
      
      {{#if this.copied}}
        <div class="alert alert-success mt-3 mb-0">
          <small>Link copied to clipboard!</small>
        </div>
      {{/if}}
    {{else}}
      <div class="text-dark">
        <i class="bi bi-qr-code display-4"></i>
        <p class="mt-2">QR code will appear when session is active</p>
      </div>
    {{/if}}
  </div>
</div>